<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LAyout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/deleter"
        android:layout_width="121dp"
        android:layout_height="60dp"
        android:layout_gravity="right"
        android:backgroundTint="#FDF6FE"
        android:onClick="delete"
        android:scaleType="centerInside"
        android:src="@drawable/buttonx"
        android:text="X" />

    <ImageButton
        android:id="@+id/imageViewlist"
        style="@android:style/Widget.Holo.Light.ImageButton"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FFFFFF"
        android:contentDescription="xx"
        android:scaleType="fitCenter"
        tools:src="@drawable/amaretto" />

    <TextView
        android:id="@+id/alcoholnamelist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Name"
        android:textAlignment="center"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/promillist"
        android:layout_width="wrap_content"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:text="promil"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/milileter"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_gravity="center"
        android:text="milileter"
        android:textAlignment="center"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/button3list"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:backgroundTint="#FDF6FE"
        android:scaleType="fitCenter"
        android:src="@drawable/buttonadd"
        android:text="@string/addtolist" />
</LinearLayout>